<%- include("partials/header", { title: "Forgot password", nav: { isAuthed: false } }) %>

<div class="card" style="max-width:520px; margin: 18px auto;">
  <h2>Forgot password</h2>
  <p>Enter your email and weâ€™ll let you reset your password.</p>

  <form method="POST" action="/forgot-password">
    <label>Email</label>
    <input name="email" type="email" required autocomplete="email" />

    <div class="actions" style="margin-top: 14px;">
      <button class="btn" type="submit">Continue</button>
      <a class="btn btn-secondary" style="padding:10px 12px; border-radius:10px;" href="/login">Back to login</a>
    </div>
  </form>

  <div class="login-meta">
    <div class="login-error">
      <% if (error) { %>
        <span class="error-text"><%= error %></span>
      <% } %>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
