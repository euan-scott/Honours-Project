<%- include("../partials/header", { title: "Nutrition log", nav: { isAuthed: true } }) %>

<div class="card" style="max-width:720px; margin: 18px auto;">
  <h2>Nutrition log</h2>

  <form method="POST" action="/nutrition">
    <label>Date</label>
    <input type="date" name="date" value="<%= new Date().toISOString().slice(0,10) %>" required />

    <div style="height:12px"></div>

    <div class="row">
      <div>
        <label>Calories</label>
        <input type="number" name="calories" min="0" required />
      </div>
      <div>
        <label>Protein (g)</label>
        <input type="number" name="protein" min="0" required />
      </div>
    </div>

    <div style="height:12px"></div>

    <div class="row">
      <div>
        <label>Carbs (g)</label>
        <input type="number" name="carbs" min="0" required />
      </div>
      <div>
        <label>Fat (g)</label>
        <input type="number" name="fat" min="0" required />
      </div>
    </div>

    <div style="height:12px"></div>

    <label>Notes (optional)</label>
    <input name="notes" />

    <div class="actions">
      <button class="btn" type="submit">Save</button>
      <a class="btn btn-secondary" style="padding:10px 12px; border-radius:10px;" href="/nutrition">Cancel</a>
    </div>
  </form>
</div>

<%- include("../partials/footer") %>
