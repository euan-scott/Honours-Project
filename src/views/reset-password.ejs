<%- include("partials/header", { title: "Reset password", nav: { isAuthed: false } }) %>

<div class="card" style="max-width:520px; margin: 18px auto;">
  <h2>Reset password</h2>

  <p>
    <%= (typeof message !== "undefined" && message) ? message : "Enter a new password below." %>
  </p>

  <form method="POST" action="/reset-password">
    <label>New password</label>
    <input name="password" type="password" minlength="8" required />

    <div style="height:12px"></div>

    <label>Confirm new password</label>
    <input name="confirm" type="password" minlength="8" required />

    <div class="actions" style="margin-top: 14px;">
      <button class="btn" type="submit">Reset password</button>
      <a class="btn btn-secondary" style="padding:10px 12px; border-radius:10px;" href="/login">Back to login</a>
    </div>
  </form>

  <div class="login-meta">
    <div class="login-error">
      <% if (error) { %>
        <span class="error-text"><%= error %></span>
      <% } %>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
